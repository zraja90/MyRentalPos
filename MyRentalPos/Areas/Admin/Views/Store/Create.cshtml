@model MyRentalPos.Areas.Admin.Models.Store.CreateStoreModel

@{
    ViewBag.Title = "Create Store";
}
<script src="/Scripts/FuelUx/wizard.js"></script>
<h2>Create Your Store</h2>
<div id="myWizard" class="wizard">
    <ul class="steps">
        <li data-target="#step1" class="active">
            <span class="badge">1</span>
            Create Store
            <span class="chevron"></span>
        </li>
        <li data-target="#step2">
            <span class="badge">2</span>
            Create Address
            <span class="chevron"></span>
        </li>
    </ul>
</div>

<div class="step-content">
    <div class="step-pane active" id="step1">
        @Html.Partial("CreateStore", Model.Store)        
    </div>
    <div class="step-pane" id="step2">
        @Html.Partial("CreateAddress", Model.StoreAddress)        
    </div>
</div>



