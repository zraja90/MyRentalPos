@using MyRentalPos.Helpers.Extensions
@model MyRentalPos.Models.Common.ContactUsModel
@{
    ViewBag.Title = "Contact Us";
}



<div class="well">
    @{
        Html.EnableClientValidation();
    }
    <div class="span6" style="border-right: 1px solid #ccc">
        <h3>Contact Us:</h3>
        @using (Html.BeginForm())
        {
            
            @Html.ValidationSummary(true)
            <div>
                <div class="control-group">
                    @Html.LabelFor(x => x.Name, new { Class = "control-label" })
                    @Html.TextBoxFor(x => x.Name)
                    @Html.ValidationMessageFor(x => x.Name)
                </div>
                <div class="control-group">
                    @Html.LabelFor(x => x.EmailAddress, new { Class = "control-label" })
                    @Html.TextBoxFor(x => x.EmailAddress, new { type = "email" })
                    @Html.ValidationMessageFor(x => x.EmailAddress)
                </div>
                <div class="control-group">
                    @Html.LabelFor(x => x.PhoneNumber)

                    @Html.TextBoxFor(x => x.PhoneNumber, new { placeholder = "Required if would like a call back" })
                    @Html.ValidationMessageFor(x => x.PhoneNumber)
                </div>
                <div class="control-group">
                    <div class="controls">
                        <label class="checkbox">
                            @Html.CheckBoxFor(x => x.CallBack)
                            Select if you would like us to call you back
                        </label>
                    </div>
                </div>
                <div class="control-group">
                    @Html.LabelFor(x => x.Message, new { Class = "control-label" })
                    @Html.TextAreaFor(x => x.Message, new { rows = "5", Class = "contactbox" })
                    @Html.ValidationMessageFor(x => x.Message)
                </div>
            </div>
            <input type="submit" value="Submit" class="btn btn-primary" />
            
        }
    </div>
    <div class="span6">
        <h3>Other Contact Info:</h3>
        <section class="contact">
            <header>
                <h4>Phone</h4>
            </header>
            <p>
                <span class="label">Main:</span>
                <span>718-786-1500</span>
            </p>
            <p>
                <span class="label">Secondary:</span>
                <span>718-786-1505</span>
            </p>
        </section>
        <section class="contact">
            <header>
                <h4>Address</h4>
            </header>
            <address>
                Tool Depot Inc.<br />
                43-77 9th St. <br/>
                Long Island City, New York 11101
            </address>
          
        </section>
    </div>
    <div class="clearfix"></div>
</div>
